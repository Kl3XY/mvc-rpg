@model mvc_rpg.ViewModel.SearchPlayers
@{
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchPlayer" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Search" class="form-control" />
                <span asp-validation-for="Search" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<style>
    img {
        width:64px;
        height:64px;
    }

</style>


@foreach(var player in Model.Players)
{
    <p>
        @{
            var base64 = Convert.ToBase64String(player.ProfilePicture);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            //Converted das ByteArray zu Base64 und converted es in ein bild.
        }
        <img src="@imgSrc" />
        @player.Name
    </p>
}