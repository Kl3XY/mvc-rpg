@model List<System.Linq.IGrouping<mvc_rpg.Models.Player, mvc_rpg.Models.Grave>>
@{
}
<style>
    img {
        width:64px;
        height:64px;
    }

</style>

<h1 style="text-align:center"><b style="color:#215f9a">HALL OF FAME</b></h1>
<h5 style="text-align:center">The enemies still fear them.</h5>
<hr>


@foreach(var player in Model)
{
    <p>
        @{
            var base64 = Convert.ToBase64String(player.Key.ProfilePicture);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            //Converted das ByteArray zu Base64 und converted es in ein bild.
        }
        <img src="@imgSrc" />
        <a asp-action="Details" asp-controller="Players" asp-route-id="@player.Key.ID">@player.Key.Name Killed @player.Count() Enemies</a>
    </p>
}