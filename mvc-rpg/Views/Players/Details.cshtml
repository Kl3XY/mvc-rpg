@model mvc_rpg.Models.Player

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Health)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Health)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SkinType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SkinType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HairType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HairType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EyeType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EyeType)
        </dd>
    </dl>
</div>
<td>
    @{
        var base64 = Convert.ToBase64String(Model.ProfilePicture);
        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        //Converted das ByteArray zu Base64 und converted es in ein bild.
    }
    <img src="@imgSrc" />
</td>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
